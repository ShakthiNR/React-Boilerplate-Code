{
    "compilerOptions": {
        "allowUnreachableCode": true,
        "exactOptionalPropertyTypes": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        // "noUnusedLocals": true, -> this app can have unused variable
        "noUnusedParameters": true,
        // "noImplicitAny": true, -> this app allows any type
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "jsx": "react-jsx", // new JSX transform (no longer necessary to import React in every file that uses JSX)
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true
    },
    "include": ["src/**/**/*", "src/declaration.d.ts"],
    "exclude": ["node_modules"]
}